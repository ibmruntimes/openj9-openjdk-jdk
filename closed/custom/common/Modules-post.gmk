ifeq ($(INCLUDE), true)

BOOT_MODULES += \
	$(if $(call equals, $(OPENJ9_ENABLE_CRIU_SUPPORT), true), openj9.criu) \
	openj9.jvm \
	openj9.sharedclasses \
	#

PLATFORM_MODULES += \
	openj9.cuda \
	openj9.dataaccess \
	openj9.gpu \
	openj9.traceformat \
	openj9.zosconditionhandling \
	#

ifeq (,$(HEALTHCENTER_JAR))
  MODULES_FILTER += ibm.healthcenter
else
  PLATFORM_MODULES += \
	ibm.healthcenter \
	jdk.attach \
	#
endif

ifeq (false,$(OPENJ9_ENABLE_JFR))
  MODULES_FILTER += \
	jdk.jfr \
	jdk.management.jfr \
	#
endif

MODULES_FILTER += \
	jdk.aot \
	jdk.hotspot.agent \
	jdk.internal.vm.ci \
	jdk.internal.vm.compiler \
	jdk.internal.vm.compiler.management \
	jdk.jstatd \
	#

NATIVE_ACCESS_MODULES += \
	openj9.cuda \
	openj9.dtfj \
	$(if $(call equals, $(BUILD_OPENJCEPLUS), true), openjceplus) \
	#

endif # include guard
